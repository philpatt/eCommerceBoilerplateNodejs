<form action="/auth/signup" method="POST">
  <div class="form-group">
    <label for="authName">First Name</label>
    <input id="authFirstName" class="form-control" type="text" name="firstname">
  </div>

  <div class="form-group">
    <label for="authLastName">Last Name</label>
    <input id="autLasthName" class="form-control" type="text" name="lastname">
  </div>

  <div class="form-group">
    <label for="authEmail">Email</label>
    <input id="authEmail" class="form-control" type="email" name="email">
  </div>

  <div class="form-group">
    <label for="authPassword">Password</label>
    <input id="authPassword" class="form-control" type="password" name="password">
  </div>

  <div class="form-group">
    <label for="authPermissions">Permissions</label>
    <select class="form-control" id="authPermissions" name="permissions">
        <option>Admin</option>
        <option>Owner</option>
    </select>
  </div>


  <input class="btn btn-primary" type="submit">
</form>